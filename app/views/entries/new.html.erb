<h4>New Entry</h4>

<%= turbo_frame_tag @entry do %>
  <div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New journal</h1>

  <%= render "form", entry: @entry %>

  <%= link_to 'Back to Journals', journals_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
<% end %>
